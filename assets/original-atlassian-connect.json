{
  "name": "Links Explorer",
  "description": "This is simple links tree view plugin",
  "key": "com.otpl.jira.plugins.lxp",
  "baseUrl": "https://lxp.optimizoryapps.com",
  "vendor": {
    "name": "Optimizory Technologies Private Limited",
    "url": "https://optimizory.com"
  },
  "links": {
    "self": "https://lxp.optimizoryapps.com/atlassian-connect.json",
    "documentation": "https://optimizory.atlassian.net/l/cp/RQM6FPJB"
  },
  "enableLicensing": true,
  "translations": {
    "paths": {
      "en-US": "/i18n/0.5/en_US.json",
      "de-DE": "/i18n/0.5/de_DE.json",
      "es-ES": "/i18n/0.5/es_ES.json",
      "fr-FR": "/i18n/0.5/fr_FR.json"
    }
  },
  "authentication": {
    "type": "none"
  },
  "scopes": ["read", "write"],
  "apiVersion": 1,
  "modules": {
    "jiraIssueTabPanels": [
      {
        "url": "/issueTreeModuleEntry.html",
        "weight": 100,
        "name": {
          "value": "Links Explorer",
          "i18n": "otpl.lxp.issue.tab.name"
        },
        "key": "lxp-issue-tab"
      }
    ],
    "generalPages": [
      {
        "url": "/tracebilityReportModuleEntry.html",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "Links Explorer",
          "i18n": "otpl.lxp.general.page.name"
        },
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ],
        "key": "lxp-home-page"
      }
    ],
    "jiraReports": [
      {
        "url": "/tracebilityReportModuleEntry.html",
        "description": {
          "value": "This is a traceability report",
          "i18n": "otpl.lxp.traceability-report.description"
        },
        "reportCategory": "agile",
        "thumbnailUrl": "/images/lxp-thumbnail.png",
        "name": {
          "value": "Links Explorer Report",
          "i18n": "otpl.lxp.traceability-report.name"
        },
        "key": "lxp-traceability-reports"
      }
    ],
    "jiraDashboardItems": [
      {
        "description": {
          "value": "The Unified Tree/Hierarchy View displays complete hierarchy of linked Jira issues in a tree structure.",
          "i18n": "otpl.lxp.tree.description",
          "authentication": "none"
        },

        "url": "/lxpViewGadget.html?dashboardItemId={dashboardItem.id}&dashboardId={dashboard.id}&view={dashboardItem.viewType}",
        "configurable": true,
        "context": ["dashboard"],
        "thumbnailUrl": "/images/lxp-thumbnail.png",
        "refreshable": true,
        "name": {
          "value": "LXP Tree Gadget",
          "i18n": "otpl.lxp.lxp-tree-gadget.name"
        },
        "key": "lxp-tree"
      },
      {
        "description": {
          "value": "End to end traceability reports displaying Jira issues and their linked issues in an easy to comprehend tabular format.",
          "i18n": "otpl.lxp.traceability-report.description",
          "authentication": "none"
        },

        "url": "/lxpTraceabilityGadget.html?dashboardItemId={dashboardItem.id}&dashboardId={dashboard.id}&view={dashboardItem.viewType}",
        "configurable": true,
        "context": ["dashboard"],
        "thumbnailUrl": "/images/lxp-thumbnail.png",
        "refreshable": true,
        "name": {
          "value": "LXP Traceability Reports",
          "i18n": "otpl.lxp.traceability-reports-gadget.name"
        },
        "key": "lxp-traceability-reports-gadget"
      }
    ]
  }
}
